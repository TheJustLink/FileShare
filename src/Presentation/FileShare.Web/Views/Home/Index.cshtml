@model String?

@{
    ViewBag.Title = "Upload";
}

<div class="outer-section">
    <div class="section">
        <div class="container-fluid">


            <div class="row">


                <form class="col-12 drop-field background-gray align-vertical-center align-horizontal-center dropzone" asp-action="Upload" asp-controller="Home" method="post" enctype="multipart/form-data" id="FileUpload">
                    <div class="col-lg-offset-3 text-center text-title color-banana align-vertical-center">
                        <img src="file_folder_5kvkdmk8q7rj.svg" alt="Document icon" id="Document-icon">
                        <p class="Centered">Drop File Here</p>
                    </div>
                </form>


            </div>


            <div class="row">


                <div class="col-12 display-field background-gray">
                    <div class="row">
                        <div class="col-12 text-title text-center color-banana">
                            <div class="offset-1 col-10 image-title background-black">
                                <p>Title</p>
                            </div>
                        </div>
                    </div>


                    <div class="row">
                        <div class="col-12">
                            <div class="offset-1 col-10 image-place-holder background-black text-center align-vertical-center overflow-hidden">
                                <img src="4d758652-e0ea-418d-9fe3-2b4dc26f09f9.jpg" alt="" class="image-preview">
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>



    </div>
</div>

<footer class="background-black footer">
    <div class="col-12 background-gray footer color-banana align-vertical-center side-text">
        <p class="Centered">© 2023 - FileShare</p>
    </div>
</footer>


